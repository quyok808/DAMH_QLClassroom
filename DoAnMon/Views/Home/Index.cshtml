<script>
	document.addEventListener("DOMContentLoaded", function () {
		// Lấy địa chỉ URL hiện tại
		var url = window.location.href;

		// Lấy tất cả các mục trong thanh menu
		var menuItems = document.querySelectorAll('nav ul li a');

		// Lặp qua từng mục trong thanh menu
		menuItems.forEach(function (item) {
			// Kiểm tra nếu địa chỉ URL chứa đường dẫn của mục đó
			if (url.indexOf(item.getAttribute('href')) > -1) {
				// Thêm lớp 'selected' cho mục đó
				item.classList.add('selected');
			}
		});
	});
	/*bài post*/
	$(document).ready(function () {
		var posts = $(".sidebar-right .post");
		var currentIndex = -1; // Vị trí hiện tại của bài post

		// Chuyển đổi vị trí của bài post mỗi 10 giây
		setInterval(function () {
			rotatePosts();
		}, 3000); // 10 giây

		function rotatePosts() {
			var nextIndex = (currentIndex + 1) % posts.length;

			// Lấy bài post ở vị trí tiếp theo
			var nextPost = $(posts[nextIndex]);

			// Di chuyển bài post ở vị trí tiếp theo lên trên cùng của cột bên phải
			$(".sidebar-right").prepend(nextPost);

			// Cập nhật vị trí hiện tại
			currentIndex = nextIndex;

			// Sao chép nội dung của bài post ở trên cùng của cột bên phải và hiển thị ở main content
			var mainContent = $(".main-content");
			var clonedContent = nextPost.clone(); // Clone bài post
			clonedContent.removeClass('post'); // Loại bỏ class 'post' để không áp dụng CSS của bài post ở cột bên phải
			clonedContent.css({ 'border': 'none', 'height': 'auto' }); // Xóa border và đặt height auto để mở rộng theo nội dung
			mainContent.html(clonedContent); // Hiển thị nội dung ở main content
		}
	});
</script>