    <div class="wrapper">
        <header>
            <div class="banner">
                <h1>LEARN WITH ONLY A</h1>
            </div>
          
            <nav style="display: flex";>
                <ul class="menu" style="margin-right: 30vh; margin-left: 500px;">
                    <li><a href="/Home/Index">Trang chủ</a></li>
                    <li><a href="/ClassRooms">Lớp học</a></li>
                    <li><a href="/BaiTaps">Bài tập</a></li>                               
                </ul>
                <div class="menu" style="margin-left: auto;">
                    <partial name="_LoginPartial" />
                </div>
            </nav>

        </header>
        <main>
            @RenderBody()
        </main>
        <footer>
            <p class="text-center"> Bản quyền thuộc về ONLY A - 2024</p>
        </footer>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
    
</body>
</html>
